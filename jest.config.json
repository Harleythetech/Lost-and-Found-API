{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!node_modules/**"
  ],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 10000,
  "verbose": true
}
